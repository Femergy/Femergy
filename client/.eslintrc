{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "linebreak-style": 0,
    "no-control-regex": "off",
    "no-undef": "off",
    "react/prefer-stateless-function": "off",
    "class-methods-use-this": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "jsx-a11y/label-has-for": [ 2, {
      "components": [ "Label" ],
      "required": {
          "some": [ "nesting", "id" ]
      },
      "allowChildren": false
  }]
  }
}

